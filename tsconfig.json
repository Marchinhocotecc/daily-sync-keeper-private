{
  "compilerOptions": {
    // Paths/alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Reasonable defaults for Vite + React + TS
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Types
    "types": [
      "vite/client",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "strict": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "vite.config.*",
    "vitest.config.*",
    "jest.config.ts",
    "jest.setup.ts",
    "scripts",
    "vite.config.ts",
    "types",
    "vitest.setup.ts"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
